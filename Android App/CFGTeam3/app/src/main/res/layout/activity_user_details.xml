<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_gradient"
    tools:context=".UserDetails">
    <LinearLayout
        android:id="@+id/Invalid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="133dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/phoneno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Enter Phone Number for Feedback"
            android:textColor="#F44336"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/Phone"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/textbox_back"
            android:drawableLeft="@drawable/ic_perm_phone_msg_black_24dp"
            android:ems="10"
            android:hint="PHONE_NUMBER"
            android:inputType="phone"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/feedbackMessage"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/feedback_message"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <Button
            android:id="@+id/Send"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/loginbutton_back"
            android:text="Confirm"
            android:textSize="22dp"
            android:onClick="onSend" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>